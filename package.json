{
  "name": "js-essentials",
  "version": "0.0.4",
  "description": "Essential tools/helpers to use in any JS project.",
  "main": "pkg/dist-src/index.js",
  "repository": "git@github.com:staghouse/js-essentials.git",
  "author": "Eric Lakatos <lakatos.eric@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "^12.8.0",
    "yarn": "^1.19.1"
  },
  "scripts": {
    "bootstrap": "yarn install && yarn audit fix",
    "serve": "node --experimental-modules server.js",
    "test": "yarn lint && jest --coverage --coverageDirectory='__coverage__'",
    "test:watch": "yarn lint && jest --watchAll --coverage --coverageDirectory='__coverage__'",
    "test:full": "yarn test && yarn build:full",
    "coverage": "codecov -t CODECOV_TOKEN",
    "lint": "eslint --fix --ext .js ./",
    "build": "pika build",
    "build:full": "yarn build && yarn docs:build",
    "docs:build": "rm -rf ./docs && esdoc",
    "docs:open": "open ./docs/index.html",
    "purge": "rm -rf node_modules"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.5.5",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.7.1",
    "@pika/plugin-build-web": "^0.7.1",
    "@pika/plugin-standard-pkg": "^0.7.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "codecov": "^3.5.0",
    "esdoc": "^1.1.0",
    "esdoc-node": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.1.0",
    "express": "^4.17.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jsdom": "^15.2.1",
    "path": "^0.12.7"
  },
  "type": "module",
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__schemas__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  }
}
